

   <div id="post_show_content" class="skinny_wrapper wrapper_padding">
            <header>
                <p class="date"><%= @post.created_at.strftime('%A, %B %d') %></p>
                <h1><%= @post.title %></h1>
                <hr>
            </header>
            <div id="content">
            	<%= markdown @post.content %>
            </div>

            <hr>

            <div id="share_box">
            	<p>Share The DO List</p>

            	<!-- Twitter -->
            	<a onclick="javascript:window.open('https://twitter.com/intent/tweet?text=<%= @post.title %> by @Devilason - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fab fa-twitter-square"></i></a>
            	<!-- Facebook -->
            	<a onclick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fab fa-facebook"></i></a>
            	<!-- Google Plus -->
            	<a onclick="javascript:window.open('https://plus.google.com/share?url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fab fa-google-plus-square"></i></a>

            </div>

            <hr>
        </div>



<br>
<br>

<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", post_path(@post), method: :delete, data:{ confirm: "Delete this post?"} %>